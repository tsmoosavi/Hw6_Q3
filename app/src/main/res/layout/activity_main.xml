<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/alladin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:text="Aladdin (2019)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/postor2"
        app:layout_constraintTop_toBottomOf="@+id/poster1" />

    <ImageView
        android:id="@+id/poster1"
        android:layout_width="448dp"
        android:layout_height="228dp"
        android:layout_marginBottom="584dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/dcdwcgn2t2c99uuss98mgn" />

    <ImageView
        android:id="@+id/postor2"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mv5bmjq2odiymjy4mf5bml5banbnxkftztgwnzy4odi2nzm___v1_" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_begin="301dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="16dp"
        android:text="May 8, 2019"
        android:textColor="#757575"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/alladin"
        app:layout_constraintTop_toBottomOf="@+id/alladin"
        app:layout_constraintVertical_bias="0.0" />



    \.toStartOf="@+id/BUY"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/BUY"
        cosnstra
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EF1A62"
        android:text="BUY FROM $9.99"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/RENT"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/RENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EF1A62"
        android:layout_marginLeft="BUY"
        android:text="RENT FROM $4.99"
        app:cornerRadius="7dp"
        app:layout_constraintEnd="@id/BUY"
        app:layout_constraintEnd_toStartOf="@+id/BUY"
        app:layout_constraintEndtoStartOf="@bild"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="301dp" />

    <ImageView
        android:id="@+id/line"
        lcn
        sli
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@android:drawable/bottom_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY=400dp" />


</androidx.constraintlayout.widget.ConstraintLayout>